<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.amtanwar.winnertesting.Football"
    tools:showIn="@layout/activity_football">

    <EditText
        android:id="@+id/edit_barc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:textAllCaps="true"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="96dp" />

    <EditText
        android:id="@+id/edit_mad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textAllCaps="true"
        android:inputType="number"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/score_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="Submit Score"
        tools:layout_editor_absoluteY="183dp"
        tools:layout_editor_absoluteX="131dp" />

    <TextView
        android:id="@+id/result_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result of the Match"
        android:textAllCaps="true"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="350dp" />
</LinearLayout>
